{
	"name": "canvas-constructor",
	"version": "4.1.0",
	"description": "A ES6 class for node-canvas with built-in functions and chained methods.",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"browser": "dist/index.umd.js",
	"unpkg": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kyranet/canvas-constructor.git"
	},
	"peerDependencies": {
		"canvas": "*"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@skyra/eslint-config": "^5.3.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"canvas": "^2.6.1",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"rollup": "^2.23.1",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^6.1.0",
		"rollup-plugin-typescript2": "^0.27.2",
		"standard-version": "^8.0.2",
		"ts-node": "^8.10.2",
		"typedoc": "^0.17.8",
		"typescript": "^3.9.7"
	},
	"keywords": [
		"canvas",
		"graphic",
		"graphics",
		"image",
		"images",
		"pdf",
		"svg",
		"node-canvas",
		"constructor",
		"chainable",
		"browser",
		"nodejs",
		"node.js",
		"cjs",
		"commonjs",
		"esm",
		"umd"
	],
	"contributors": [
		"kyranet <kyradiscord@gmail.com>",
		"yorkaargh"
	],
	"author": "kyranet",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kyranet/canvas-constructor/issues"
	},
	"engines": {
		"node": ">=8.6.0"
	},
	"homepage": "https://github.com/kyranet/canvas-constructor#readme",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix --ext ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.2",
		"kind-of": "^6.0.3"
	}
}
