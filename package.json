{
	"name": "canvas-constructor",
	"version": "4.1.0",
	"description": "A ES6 class for node-canvas with built-in functions and chained methods.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": "dist/index.umd.js",
	"unpkg": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kyranet/canvas-constructor.git"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@sapphire/eslint-config": "^3.1.3",
		"@sapphire/prettier-config": "1.1.2",
		"@sapphire/ts-config": "2.2.2",
		"@types/skia-canvas": "^0.9.0",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"canvas": "^2.8.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.0",
		"pretty-quick": "^3.1.0",
		"rollup": "^2.49.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"skia-canvas": "^0.9.21",
		"standard-version": "^9.3.0",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.36",
		"typescript": "^4.2.4"
	},
	"keywords": [
		"canvas",
		"graphic",
		"graphics",
		"image",
		"images",
		"pdf",
		"svg",
		"node-canvas",
		"skia-canvas",
		"constructor",
		"chainable",
		"browser",
		"nodejs",
		"node.js",
		"cjs",
		"commonjs",
		"esm",
		"umd"
	],
	"contributors": [
		"Antonio Rom√°n <kyradiscord@gmail.com>",
		"yorkaargh"
	],
	"author": "kyranet",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kyranet/canvas-constructor/issues"
	},
	"engines": {
		"node": ">=8.6.0"
	},
	"homepage": "https://github.com/kyranet/canvas-constructor#readme",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^8.2.4",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3"
	},
	"prettier": "@sapphire/prettier-config"
}
